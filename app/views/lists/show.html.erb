<%= link_to "Edit this list", edit_list_path(@list), class: "btn btn-primary"%>


<h2><%= @list.name %></h2>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %> <%= bookmark.movie[:title] %></li>
    <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></li>
  <% end %>
</ul>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%# <%= f.association :list %>
  <%= f.button :submit %>
<% end %>






<%= link_to "Back to list of lists", lists_path, class: "btn btn-primary"%>

